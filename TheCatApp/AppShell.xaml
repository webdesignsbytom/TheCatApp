<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TheCatApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TheCatApp"
    xmlns:main="clr-namespace:TheCatApp.View.Main"
    xmlns:cotd="clr-namespace:TheCatApp.View.COTD"
    xmlns:tmode="clr-namespace:TheCatApp.View.TherapyMode"
    xmlns:endlesscats="clr-namespace:TheCatApp.View.EndlessCats"
    xmlns:games="clr-namespace:TheCatApp.View.Games"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="TheCatApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate main:MainPage}"
        Route="MainPage" />    
    
    <ShellContent
        Title="Cat of the Day"
        ContentTemplate="{DataTemplate cotd:CotdPage}"
        Route="CotdPage" /> 
    
    <ShellContent
        Title="Therapy Mode"
        ContentTemplate="{DataTemplate tmode:TherapyModePage}"
        Route="TherapyMode" />    
    
    <ShellContent
        Title="Endless Cats"
        ContentTemplate="{DataTemplate endlesscats:EndlessCatsPage}"
        Route="EndlessCats" />    
    
    <ShellContent
        Title="Games"
         ContentTemplate="{DataTemplate games:GamesPage}"
        Route="GamesPage" />

</Shell>
