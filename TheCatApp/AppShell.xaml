<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TheCatApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TheCatApp"
    xmlns:main="clr-namespace:TheCatApp.View.Main"
    xmlns:cotd="clr-namespace:TheCatApp.View.COTD"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Title="TheCatApp">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate main:MainPage}"
        Route="MainPage" />    
    
    <ShellContent
        Title="Cat of the Day"
        ContentTemplate="{DataTemplate cotd:CotdPage}"
        Route="CotdPage" />

</Shell>
